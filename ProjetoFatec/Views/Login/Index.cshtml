@model ProjetoFatec.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
  <div class="mb-3">
    <label for="Usuario" class="form-label">Usuário</label>
    <input asp-for="Usuario" type="text" class="form-control" id="usuarioLogin" aria-describedby="emailHelp">
    @Html.ValidationMessageFor(x=> x.Usuario)
  </div>
  <div class="mb-3">
    <label for="Senha" class="form-label">Senha</label>
    <input asp-for="Senha" type="password" class="form-control" id="senhaLogin">
    @Html.ValidationMessageFor(x=> x.Senha)
  </div>
  <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>